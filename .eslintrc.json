{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"@typescript-eslint/no-explicit-any": "warn",
		"@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
		"no-throw-literal": "warn",
		"semi": ["warn", "always"],
		"curly": "warn",
		"eqeqeq": "warn"
	},
	"ignorePatterns": [
		"out",
		"node_modules",
		"tests"
	]
}
