{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"out",
		"tests"
	],
	"references": [
		{
			"path": "./demos/tsconfig.json"
		},
	]
}
