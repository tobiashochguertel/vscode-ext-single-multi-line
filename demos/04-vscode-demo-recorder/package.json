{
  "name": "vscode-demo-recorder",
  "version": "1.0.0",
  "description": "Project-agnostic VS Code extension demo GIF recorder using @vscode/test-electron",
  "private": true,
  "type": "module",
  "bin": {
    "vscode-demo-recorder": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node",
    "build:scenarios": "npx tsc -p tsconfig.json",
    "schema:generate": "bun src/commands/schema-generate.ts"
  },
  "dependencies": {
    "@vscode/test-electron": "^2.4.1",
    "chalk": "^5.6.2",
    "tslog": "^4.10.2",
    "yaml": "^2.8.2",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.85.0",
    "@types/yargs": "^17.0.35",
    "typescript": "^5.9.3"
  }
}
